<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xmlns:bpmndi="http://www.omg.org/spec/BPMN/20100524/DI"
             xmlns:omgdc="http://www.omg.org/spec/DD/20100524/DC"
             xmlns:omgdi="http://www.omg.org/spec/DD/20100524/DI"
             xmlns:flowable="http://flowable.org/bpmn"
             typeLanguage="http://www.w3.org/2001/XMLSchema"
             expressionLanguage="http://www.w3.org/1999/XPath"
             targetNamespace="http://www.flowable.org/processdef">

    <process id="articleReviewProcess" name="Article Review Process" isExecutable="true">

        <startEvent id="startEvent" name="Article Submitted"/>
        <sequenceFlow id="flow1" sourceRef="startEvent" targetRef="reviewTask"/>

        <userTask id="reviewTask" name="Review Article" flowable:assignee="editor"/>
        <sequenceFlow id="flow2" sourceRef="reviewTask" targetRef="decisionGateway"/>

        <exclusiveGateway id="decisionGateway" name="Accept?"/>
        <sequenceFlow id="flow3" sourceRef="decisionGateway" targetRef="publishTask">
            <conditionExpression xsi:type="tFormalExpression"><![CDATA[${accepted}]]></conditionExpression>
        </sequenceFlow>
        <sequenceFlow id="flow4" sourceRef="decisionGateway" targetRef="notifyAuthorTask">
            <conditionExpression xsi:type="tFormalExpression"><![CDATA[${!accepted}]]></conditionExpression>
        </sequenceFlow>

        <serviceTask id="publishTask" name="Publish Article"
                     flowable:class="app.flow.service.PublishArticleService"/>
        <sequenceFlow id="flow5" sourceRef="publishTask" targetRef="endEvent"/>

        <serviceTask id="notifyAuthorTask" name="Notify Author"
                     flowable:class="app.flow.service.NotifyAuthorService"/>
        <sequenceFlow id="flow6" sourceRef="notifyAuthorTask" targetRef="endEvent"/>

        <endEvent id="endEvent" name="End"/>
    </process>
</definitions>
